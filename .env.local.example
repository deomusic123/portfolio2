# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Required for admin operations)
# Used for bypassing RLS in admin actions (team management, user deletion)
# ⚠️ Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application URL (Required for team invitations)
# Used to generate invitation links and email templates
# Production: https://yourdomain.com
# Development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# n8n Webhook (Optional)
# Automation webhook for lead notifications and workflow triggers
# Leave empty to disable automation features
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# Optional: Feature flags
NEXT_PUBLIC_DEBUG_MODE=false
